        <!-- ============================================================== -->
        <!-- Page Content -->
        <!-- ============================================================== -->
        <div id="page-wrapper">
            <div class="container-fluid">
                <div class="row bg-title">
                    <div class="col-lg-3 col-md-4 col-sm-4 col-xs-12">
                        <h4 class="page-title">Actualités</h4>
                    </div>
                    <div class="col-lg-9 col-sm-8 col-md-8 col-xs-12">

                        <ol class="breadcrumb">
                            <li><a href="#">Dashboard</a></li>
                        </ol>
                    </div>
                    <!-- /.col-lg-12 -->
                </div>
                <!-- /.row -->
                <!-- ============================================================== -->
                <!-- Different data widgets -->
                <!-- ============================================================== -->
                <!-- .row -->
                <div class="row">
                    <div class="col-lg-4 col-sm-6 col-xs-12">
                        <div class="white-box analytics-info">
                            <h3 class="box-title">Total Actualités</h3>
                            <ul class="list-inline two-part">
                                <li>
                                    <div id="sparklinedash"></div>
                                </li>
                                <li class="text-right"><i class="ti-arrow-up text-success"></i> <span
                                        class="counter text-success"> <%= totalActubeers  %> </span></li>
                            </ul>
                        </div>
                    </div>

                </div>
                <!--/.row -->
                <!--row -->
                <!-- /.row -->

                <!-- ============================================================== -->
                <!-- table -->
                <!-- ============================================================== -->
                <a href="/admin/articles/add" class="btn btn-primary ">Ajouter un Article</a>
                <div class="row">
                    <div class="col-md-12 col-lg-12 col-sm-12">
                        <div class="white-box">
                            <div class="col-md-3 col-sm-4 col-xs-6 pull-right">

                            </div>
                            <h3 class="box-title">Articles</h3>
                            <div class="table-responsive">
                                <table class="table">
                                    <thead>
                                        <tr>
                                            <th>id</th>
                                            <th>Titre</th>
                                            <th>Contenu article</th>
                                            <th>Auteur de l'article</th>
                                            <th>image</th>
                                            <th>Date de l'article</th>
                                            <th>Date de publication</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <% actubeer.forEach((actu, index) => { %>
                                        <tr>
                                            <td><%= actu.actu_id %></td>
                                            <td><%= actu.actuTitle %></td>
                                            <td><%= actu.actuContent %></td>
                                            <td><%= actu.author %></td>
                                            <td><%= actu.image %></td>
                                            <td><%= actu.Date %></td>
                                            <td><%= actu.created_at %></td>
                                            <td><a method="POST" href="/admin/articles/edit/<%= actu.actu_id %>  "
                                                    class="btn btn-success">Editer</a></td>
                                            <td><a href="/admin/articles/delete/ <%= actu.actu_id  %>   "
                                                    class="btn btn-danger">Supprimer</a></td>
                                        </tr>
                                        <% }) %>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>

               

                <%- include('../partial/admin/footer.ejs') %>