    </div>
   
    <div id="wrapper">
      
        <%- include('../partial/admin/navbar.ejs') %>
        <!-- End Top Navigation -->
        <!-- ============================================================== -->
        <!-- Left Sidebar - style you can find in sidebar.scss  -->
        <!-- ============================================================== -->
